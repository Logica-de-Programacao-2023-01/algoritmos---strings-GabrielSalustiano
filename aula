package main

import (
	"fmt"
	"strings"
)

func main() {
	var s1 string
	var s2 string
	fmt.Println("Digite uma string")
	fmt.Scan(&s1)
	fmt.Println("Escolha um caractere presente na string")
	fmt.Scan(&s2)
	z := strings.Index(s1, s2)
	fmt.Printf("Esse caractere apareçe %d\n vezes", x)
}
 ====
 *correçao minima no 3o
 package main

import (
	"fmt"
	"strings"
)

func main() {
	var s1 string
	var s2 string
	fmt.Println("Digite uma string")
	fmt.Scan(&s1)
	fmt.Println("Escolha um caractere presente na string")
	fmt.Scan(&s2)
	z := strings.Index(s1, s2)
	x := len([]int{z})
	fmt.Printf("Esse caractere apareçe %d\n vezes", x)
}
